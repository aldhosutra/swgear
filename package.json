{
  "name": "swgear",
  "description": "A CLI suite to supercharge your Swagger/OpenAPI workflow",
  "version": "0.0.1",
  "author": "aldhosutra",
  "bin": {
    "swgear": "./bin/run.js"
  },
  "bugs": "https://github.com/aldhosutra/swgear/issues",
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.0.0",
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^5",
    "autocannon": "^8.0.0",
    "axios": "^1.10.0",
    "cli-progress": "^3.12.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1",
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4",
    "@types/autocannon": "^7.12.7",
    "@types/chai": "^4",
    "@types/cli-progress": "^3.11.6",
    "@types/mocha": "^10",
    "@types/node": "^18",
    "chai": "^4",
    "eslint": "^9",
    "eslint-config-oclif": "^6",
    "eslint-config-prettier": "^10",
    "mocha": "^10",
    "oclif": "^4",
    "openapi-types": "^12.1.3",
    "shx": "^0.3.3",
    "ts-node": "^10",
    "typescript": "^5"
  },
  "overrides": {
    "glob": "10.4.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "./bin",
    "./dist",
    "./oclif.manifest.json"
  ],
  "homepage": "https://swgear.js.org",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "oclif": {
    "bin": "swgear",
    "dirname": "swgear",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " ",
    "topics": {
      "benchmark": {
        "description": "Run performance benchmarks against your OpenAPI/Swagger API."
      },
      "client": {
        "description": "Generate a TypeScript client from your OpenAPI/Swagger spec."
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aldhosutra/swgear.git"
  },
  "scripts": {
    "build": "shx rm -f tsconfig.tsbuildinfo && shx rm -rf dist && tsc -b",
    "lint": "eslint",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "types": "dist/index.d.ts"
}
